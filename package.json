{
  "name": "pngaroo",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "repository": "hubgit/pngaroo",
  "description": "A web app for resizing and converting PNG files to Base64 data URIs",
  "scripts": {
    "dev": "webpack-dev-server --port $PORT",
    "build": "webpack --mode=production",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit --project ."
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "clipboard-copy": "^3.1.0",
    "file-saver": "^2.0.2",
    "filesize": "^6.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.3",
    "workbox-window": "^5.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/classnames": "^2.2.10",
    "@types/file-saver": "^2.0.1",
    "@types/filesize": "^5.0.0",
    "@types/react": "16.9.48",
    "@types/react-dom": "16.9.8",
    "@types/workbox-window": "^4.3.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.4",
    "css-loader": "^4.2.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "html-webpack-plugin": "^4.3.0",
    "prettier": "^2.1.1",
    "style-loader": "^1.2.1",
    "typescript": "4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react",
      "@babel/typescript"
    ]
  },
  "browserslist": [
    "last 2 years"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "react",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:promise/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0,
      "promise/always-return": 0,
      "react/display-name": 0,
      "react/prop-types": 0,
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      },
      "react": {
        "version": "16.13"
      }
    },
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": 0
        }
      }
    ]
  }
}
